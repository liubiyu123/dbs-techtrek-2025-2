{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es5", "es6", "es2016"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middleware/*": ["middleware/*"],
      "@processor/*": ["processor/*"],
      "@exception/*": ["exception/*"],
      "@routes": ["routes/index"],
      "@enum": ["enum/index"],
      "@config": ["config/index"],
      "@constant": ["constant/index"],
      "@database": ["database/index"],
    }
  },
  "include": ["src"]
}